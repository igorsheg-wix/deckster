{
  "name": "deckster",
  "version": "0.0.1",
  "description": "Create a great presentation deck - story first.",
  "repository": "https://github.com/igors-wix/deckster.git",
  "author": "igors-wix <igors@wix.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "concurrently 'yarn run esbuild:watch' 'yarn run esbuild:serve'",
    "esbuild:watch": "esbuild src/index.tsx --color=true --bundle --watch --color=true --outfile=www/static/bundle.js",
    "esbuild:serve": "esbuild --servedir=www",
    "esbuild:build": "esbuild src/index.tsx --bundle --minify --outfile=www/static/bundle.js"
  },
  "dependencies": {
    "@mantine/core": "^4.1.3",
    "@mantine/hooks": "^4.1.3",
    "@radix-ui/colors": "^0.1.8",
    "@radix-ui/react-icons": "^1.1.1",
    "@stitches/react": "^1.2.8",
    "axios": "^0.26.1",
    "immer": "^9.0.15",
    "lodash-es": "^4.17.21",
    "marked": "^4.0.17",
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-spring": "^9.4.4",
    "reset-css": "^5.0.1",
    "styled-components": "^5.3.5",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@types/dompurify": "^2.3.3",
    "@types/lodash-es": "^4.17.6",
    "@types/marked": "^4.0.3",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "concurrently": "^7.2.2",
    "dompurify": "^2.3.8",
    "esbuild": "^0.14.34",
    "eslint": "^8.13.0",
    "typescript": "^4.6.3",
    "typescript-styled-plugin": "^0.18.2"
  }
}
